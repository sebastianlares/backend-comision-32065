worker_processes  1;

events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  application/octet-stream;

    upstream random_app {
        server 127.0.0.1:8081;
    }
	
	upstream node_app {
        server 127.0.0.1:8080;
    }

    server {
        listen 80;
        server_name nginx_node;
		
        location /api/randoms {
            proxy_pass http://random_api_app;
        }
		
		location / {
		    proxy_pass http://node_app;
		}
    }
}